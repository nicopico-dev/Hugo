<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="FoodLabel">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey700</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/space_small</item>
        <item name="android:drawablePadding">@dimen/space_small</item>
        <item name="android:background">@drawable/fab_label_bg</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:drawableTint" tools:ignore="NewApi">@color/grey900</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Colored"/>
    <style name="Button.Link" parent="Widget.AppCompat.Button.Borderless.Colored"/>

    <style name="FoodCare">
        <item name="android:background">@drawable/food_care_bg</item>
        <item name="android:textAppearance">?android:textAppearanceSmallInverse</item>
    </style>

    <style name="Text">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/grey900</item>
    </style>

    <style name="Text.Strong">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Light">
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">@color/grey700</item>
    </style>

    <style name="BackgroundImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:minHeight">200dp</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:tint">@color/grey200</item>
    </style>

</resources>